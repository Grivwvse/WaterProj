@model WaterProj.DTOs.CreateRouteDto

 <div class="container mt-5">
    <!-- Заголовок -->
    <div class="text-center mb-4">
        <h2 class="text-primary">Создание маршрута</h2>
    </div>

    <!-- Название маршрута -->
    <div class="card shadow-lg mb-4">
        <div class="card-body">
            <div class="form-group mb-3">
                <label for="routeName" class="form-label">Название маршрута:</label>
                <input type="text" class="form-control" id="routeName" name="routeName" required />
            </div>

            <div class="form-group mb-3">
                <label for="routeDescription" class="form-label">Описание маршрута:</label>
                <textarea class="form-control" id="routeDescription" name="routeDescription" rows="3"></textarea>
            </div>
        </div>
    </div>

    <!-- Фотографии маршрута -->
    <div class="card shadow-lg mb-4">
        <div class="card-body">
            <form id="imageForm">
                <div class="form-group mb-3">
                    <label for="images" class="form-label">Фотографии маршрута:</label>
                    <input type="file" class="form-control" id="images" name="Images" multiple />
                </div>
            </form>
        </div>
    </div>

    <!-- Карта -->
    <div class="card shadow-lg mb-4">
        <div class="card-body">
            <h5 class="text-primary">Карта маршрута</h5>
            <div id="myMap" class="border rounded" style="width: 100%; height: 600px;"></div>
        </div>
    </div>

    <!-- Остановки -->
    <div class="card shadow-lg mb-4">
        <div class="card-body">
            <h5 class="text-primary">Добавление остановок</h5>
            <div class="form-group mb-3">
                <label for="coords" class="form-label">Координаты:</label>
                <input type="text" id="coords" class="form-control" readonly />
            </div>
            <div class="form-group mb-3">
                <label for="iconContent" class="form-label">Название (iconContent):</label>
                <input type="text" id="iconContent" class="form-control" />
            </div>
            <div class="form-group mb-3">
                <label for="scheduleDescription" class="form-label">Опишите ваше расписание:</label>
                <textarea id="scheduleDescription" class="form-control" rows="3"></textarea>
            </div>
            <button id="saveStop" class="btn btn-primary">Сохранить остановку</button>
        </div>
    </div>

    <!-- Выбор дней недели -->
    <div class="card shadow-lg mb-4">
        <div class="card-body">
            <h5 class="text-primary">
                <i class="bi bi-calendar-week me-2"></i>Дни выполнения маршрута
            </h5>
            <p class="text-muted mb-3">Выберите дни недели, в которые будет осуществляться перевозка по маршруту:</p>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="checkbox" value="1" id="monday" name="operatingDays">
                        <label class="form-check-label" for="monday">Понедельник</label>
                    </div>
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="checkbox" value="2" id="tuesday" name="operatingDays">
                        <label class="form-check-label" for="tuesday">Вторник</label>
                    </div>
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="checkbox" value="3" id="wednesday" name="operatingDays">
                        <label class="form-check-label" for="wednesday">Среда</label>
                    </div>
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="checkbox" value="4" id="thursday" name="operatingDays">
                        <label class="form-check-label" for="thursday">Четверг</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="checkbox" value="5" id="friday" name="operatingDays">
                        <label class="form-check-label" for="friday">Пятница</label>
                    </div>
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="checkbox" value="6" id="saturday" name="operatingDays">
                        <label class="form-check-label" for="saturday">Суббота</label>
                    </div>
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="checkbox" value="0" id="sunday" name="operatingDays">
                        <label class="form-check-label" for="sunday">Воскресенье</label>
                    </div>
                </div>
            </div>

            <div class="alert alert-info mt-3">
                <i class="bi bi-info-circle"></i>
                Расписание поможет пассажирам найти маршрут в нужный день недели.
            </div>
        </div>
    </div>

    <!-- Выбор корабля -->
    <div class="card shadow-lg mb-4">
        <div class="card-body">
            <h5 class="text-primary">Выбор корабля</h5>
            <div class="form-group mb-3">
                <label for="shipSelect" class="form-label">Выберите корабль для маршрута:</label>
                <select class="form-select" id="shipSelect" required>
                    <option value="" selected disabled>Выберите судно</option>
                    @if (@Model.Ships == null || !@Model.Ships.Any())
                    {
                        <div class="alert alert-warning mt-2">
                            У вас нет активных судов. <a href="/Ship/CreateShip">Создайте</a> или активируйте судно.
                        </div>
                    }
                    else
                    {
                    @foreach (var ship in @Model.Ships)
                    {
                        <option value="@ship.ShipId">@ship.Name (@ship.ShipType.Name)</option>
                    }
                    }

                </select>

                <div class="form-text">Только активные суда доступны для выбора</div>
            </div>
        </div>
    </div>

    <!-- Добавляем поле для цены маршрута -->
    <div class="card shadow-lg mb-4">
        <div class="card-body">
            <h5 class="text-primary">
                <i class="bi bi-tag-fill me-2"></i>Стоимость билетов
            </h5>

            <div class="price-block mt-3">
                <label for="routePrice" class="form-label fw-bold">Начальная цена билета:</label>
                <div class="d-flex align-items-center">
                    <div class="price-badge me-3">от</div>
                    <div class="price-input-wrapper flex-grow-1">
                        <input type="number"
                               class="form-control form-control-lg"
                               id="routePrice"
                               name="routePrice"
                               min="0"
                               step="50"
                               placeholder="1000"
                               required />
                    </div>
                    <div class="price-currency ms-2">₽</div>
                </div>
                <small class="text-muted mt-2 d-block">
                    <i class="bi bi-info-circle me-1"></i>Минимальная цена, по которой пассажиры смогут приобрести билет
                </small>
            </div>
        </div>
    </div>

    <div class="card-body text-center">
        <input type="hidden" name="RouteJson" id="routeJson" />
        <button type="submit" id="saveRoute" class="btn btn-success btn-lg">
            <i class="bi bi-save"></i> Сохранить маршрут
        </button>
    </div>

    <!-- Модальное окно для создания новой остановки -->
    <div class="modal fade" id="createStopModal" tabindex="-1" aria-labelledby="createStopModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="createStopModalLabel">Новая остановка</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="stopModalForm">
                        <div class="mb-3">
                            <label for="modal-stopName" class="form-label">Название остановки</label>
                            <input type="text" class="form-control" id="modal-stopName" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Координаты</label>
                            <p id="modal-stopCoords" class="form-control-plaintext"></p>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                    <button type="button" class="btn btn-primary" id="saveStopFromModal">Сохранить</button>
                </div>
            </div>
        </div>
    </div>

</div>