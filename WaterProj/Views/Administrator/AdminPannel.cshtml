@model WaterProj.Models.Administrator
@{
    ViewData["Title"] = "Панель администратора";
}

<section class="bg2 py-4">
    <div class="container">
        <div class="row mb-4">
            <div class="col-12">
                <h2 class="text-center text-uppercase text-secondary">Панель администратора</h2>
                <hr class="my-3 mx-auto w-50">
            </div>
        </div>

        <div class="row">
            <!-- Боковая панель с информацией о профиле -->
            <div class="col-md-4 col-lg-3 mb-4">
                <div class="card shadow-lg h-100 rounded-3 border-0">
                    <div class="card-body">
                        <h3 class="card-title text-primary mb-4">Профиль администратора</h3>
                        <div class="text-center mb-4">

                            <img src="/images/avatars/default-avatar.jpg" alt="Аватар" class="rounded-circle img-thumbnail shadow" style="width: 150px; height: 150px; object-fit: cover;" />


                            <h5 class="mt-3 mb-1">@Model.Name</h5>
                            <p class="text-muted mb-0">@Model.Login</p>
                            <span class="badge bg-danger">Администратор</span>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <form asp-action="Logout" method="post">
                                <button type="submit" class="btn btn-outline-danger w-100">
                                    <i class="bi bi-box-arrow-right"></i> Выйти
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Основное содержимое -->
            <div class="col-md-8 col-lg-9">
                <div class="card shadow-lg rounded-3 border-0">
                    <div class="card-body">
                        <h3 class="card-title text-primary mb-4">Управление системой</h3>

                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="card h-100 bg-light border-0 shadow-sm">
                                    <div class="card-body text-center p-4">
                                        <i class="bi bi-people-fill text-primary" style="font-size: 3rem;"></i>
                                        <h4 class="mt-3">Управление пользователями</h4>
                                        <p class="text-muted">Просмотр и управление аккаунтами покупателей и перевозчиков</p>
                                        <a asp-action="ManageUsers" class="btn btn-primary mt-2">
                                            <i class="bi bi-pencil"></i> Управлять
                                        </a>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="card h-100 bg-light border-0 shadow-sm">
                                    <div class="card-body text-center p-4">
                                        <i class="bi bi-map-fill text-primary" style="font-size: 3rem;"></i>
                                        <h4 class="mt-3">Управление маршрутами</h4>
                                        <p class="text-muted">Просмотр и управление маршрутами в системе</p>
                                        <a asp-action="ManageRoutes" class="btn btn-primary mt-2">
                                            <i class="bi bi-pencil"></i> Управлять
                                        </a>
                                    </div>
                                </div>
                            </div>

                            <!-- Здесь можно добавить дополнительные карточки для других функций админа -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>