@{
    ViewData["Title"] = "Авторизация";
}


@if (ViewBag.AuthData != null)
{
    <div class="alert alert-info">
        @ViewBag.AuthData
    </div>
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h3><i class="bi bi-person-circle"></i> Вход в личный кабинет</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Index" method="post">
                        <!-- Логин -->
                        <div class="mb-3">
                            <label for="login" class="form-label">
                                <i class="bi bi-envelope"></i> Логин
                            </label>
                            <input type="text" id="login" name="login" class="form-control" placeholder="Введите ваш логин" required />
                        </div>

                        <!-- Пароль -->
                        <div class="mb-3">
                            <label for="password" class="form-label">
                                <i class="bi bi-lock"></i> Пароль
                            </label>
                            <input type="password" id="password" name="password" class="form-control" placeholder="Введите ваш пароль" required />
                        </div>

                        <!-- Тип пользователя -->
                        <div class="mb-3">
                            <label class="form-label">
                                <i class="bi bi-person-badge"></i> Тип пользователя
                            </label>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="userType" id="Consumer" value="Consumer" checked />
                                <label class="form-check-label" for="Consumer">Пользователь</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="userType" id="Transporter" value="Transporter" />
                                <label class="form-check-label" for="Transporter">Перевозчик</label>
                            </div>
                        </div>

                        <!-- Кнопка входа -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-box-arrow-in-right"></i> Войти
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <a asp-controller="Registration" asp-action="Index" class="text-decoration-none">Нет аккаунта? Зарегистрироваться</a>
                </div>
            </div>
        </div>
    </div>
</div>