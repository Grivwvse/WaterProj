@model WaterProj.Models.Transporter

<h2>Редактирование профиля</h2>

@if (ViewBag.Message != null)
{
    <div class="alert alert-success">
        @ViewBag.Message
    </div>
}

<section class="bg2">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2 class="text-center text-uppercase text-secondary">Личный кабинет</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 col-sm-12">
                <h5 class="text-center">Персональные данные</h5>
                <hr class="mx-5">
                <form asp-action="Edit" method="post" id="editForm">
                    <div class="form-group">
                        <label asp-for="Login"></label>
                        <input asp-for="Login" class="form-control" id="login" readonly="readonly" />
                    </div>

                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" id="name" readonly="readonly" />
                    </div>
                    <!-- Добавьте другие поля по необходимости -->
                    <br />
                </form>

                <button id="editButton" class="btn btn-primary">Редактировать</button>

                <form asp-action="Logout" method="post">
                    <button type="submit" class="btn btn-primary">Выйти</button>
                </form>
                <div class="row mx-0 mx-md-5">
                </div>
            </div>
            <div class="col-md-6 col-sm-12">
                <h5 class="text-center">Маршруты</h5>
                <hr class="mx-5">
                <div class="row mx-0 mx-md-5">
                </div>
            </div>
        </div>
    </div>
</section>