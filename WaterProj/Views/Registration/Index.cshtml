@model WaterProj.Models.Consumer

@{
    ViewData["Title"] = "Регистрация";
}

<h2>Регистрация</h2>

@if (ViewBag.ValidationErrors != null)
{
    <div class="text-danger">
        <ul>
            @foreach (string error in ViewBag.ValidationErrors)
            {
                <li>@error</li>
            }
        </ul>
    </div>
}

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<form asp-action="Index" method="post">
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Surname"></label>
        <input asp-for="Surname" class="form-control" />
        <span asp-validation-for="Surname" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Phone"></label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Login"></label>
        <input asp-for="Login" class="form-control" />
        <span asp-validation-for="Login" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="PasswordHash"></label>
        <input asp-for="PasswordHash" type="password" class="form-control" />
        <span asp-validation-for="PasswordHash" class="text-danger"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Зарегистрироваться</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}